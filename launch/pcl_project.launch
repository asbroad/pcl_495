<launch>
	<include file="$(find openni2_launch)/launch/openni2.launch">
		<arg name="depth_registration" value="true"/>
	</include>
	<node name="four95_pcl_node" pkg="495_pcl" type="495_pcl_node" />
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find 495_pcl)/viz.rviz" />

	<node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen"/>

	<node pkg="nodelet" type="nodelet" name="voxel_grid" args="load pcl/VoxelGrid pcl_manager" output="screen">
		<remap from="~input" to="/camera/depth/points"/>
		<rosparam>filter_field_name: z</rosparam>
		<rosparam>filter_limit_min: 0.01</rosparam>
		<rosparam>filter_limit_max: 1.7</rosparam>
		<rosparam>filter_limit_negative: False</rosparam>
		<rosparam>leaf_size: 0.01</rosparam>
	</node>
</launch>
